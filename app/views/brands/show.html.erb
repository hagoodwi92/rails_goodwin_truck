<h1><%= @brand.name %></h1>

<h4>Models Available:</h4>
<% if @brand.models.any? %>
<table class="table table-striped">
  <thead>
      <tr>
        <th>Model</th>
        <th>ID</th>
        <th>Year</th>
        <th>Price</th>
        <th>Miles</th>
      </tr>
    </thead>
    <% @brand.models.each do |model| %>
      <tbody>
        <tr>
          <td><%= link_to model.name, brand_model_path(@brand, model) %></td></br>
          <td><%= model.id %></td>
          <td><%= model.year %></td>
          <td><%= model.price %></td>
          <td><%= model.miles %></td>
        </tr>
      </tbody>
    <% end %>
    <% else %>
      <p>No models yet for this brand</p>
    <% end %>
    </br>
</table>

<p><%= link_to "Add a model", new_brand_model_path(@brand)%></p>

<p><%= link_to "Edit", edit_brand_path(@brand) %></p>
<p><%= link_to "Delete", brand_path(@brand),
                         :data => {:confirm => "You sure?",
                                   :method => "delete"} %></p>

<p><%= link_to "Return to brands", brands_path %></p>

